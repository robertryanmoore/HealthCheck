import java.awt.*;
import javax.swing.*; 


public class Settings {
	
	private static void createWindow() {
		
		JFrame frame = new JFrame("Settings"); 
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //change this to CANCEl_ON_CLOSE later
		
		
		 JLabel textLabel = new JLabel("Log Path: ",SwingConstants.CENTER); textLabel.setPreferredSize(new Dimension(10, 100)); 
		 frame.getContentPane().add(textLabel, BorderLayout.WEST);
		 frame.setLocationRelativeTo(null); 
		 frame.pack(); 
		 frame.setVisible(true); 
	} 
	
	public static void main(String args[]){
		
		createWindow();
		
	}
	

}
