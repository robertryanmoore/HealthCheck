import java.awt.*;
import javax.swing.*; 


public class Settings {
	
	private static void createWindow() {
		
		JFrame frame = new JFrame("Settings"); 
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //change this to CANCEl_ON_CLOSE later
		frame.setSize(300, 600);
		
		JLabel path = new JLabel("Log path: ");
		path.setAlignmentX(frame.getAlignmentX()+3);
		path.setAlignmentY(frame.getAlignmentY()+3);
		
		frame.add(path);
		frame.setLocationRelativeTo(null);
		frame.setVisible(true);
	} 
	
	public static void main(String args[]){
		
		createWindow();
		
	}
	

}
